{
  "name": "@passu/ui",
  "version": "0.1.0",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./dist/*.js"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "dev:storybook": "storybook dev -p 6006",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.515.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.4"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@passu/eslint-config": "workspace:*",
    "@passu/tailwind-config": "workspace:*",
    "@passu/typescript-config": "workspace:*",
    "@storybook/addon-docs": "9.0.10",
    "@storybook/addon-onboarding": "9.0.10",
    "@storybook/react-vite": "^9.0.10",
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.29.0",
    "eslint-plugin-storybook": "9.0.10",
    "storybook": "9.0.10",
    "tailwindcss": "^4.1.10",
    "tailwindcss-spring": "^1.0.1",
    "typescript": "5.8.3",
    "vite": "^6.3.5"
  }
}
